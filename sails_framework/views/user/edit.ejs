<form action="/user/update/<%= user.id %>" method="POST" class="form-signin">
	<h2>Hey, you are edit a user...</h2>

	<input value="<%= user.name %>" type="text" name="name" class="form-control">
	<input value="<%= user.title %>" type="text" name="title" class="form-control">
	<input value="<%= user.email %>" type="text" name="email" class="form-control">
	<% if(session.authenticated && session.User.admin){ %>
		<% if(user.admin){ %>
			<input type="hidden" name="admin" value="unchecked"> 
			<label class="checkbox"><input type="checkbox" name="admin" checked> Admin</label> 
		<% }else{ %>
			<input type="hidden" name="admin" value="unchecked">
			<label class="checkbox"><input type="checkbox" name="admin"> Admin</label> 
		<% } %>
	<% } %>	
	<input value="Proceed" type="submit" class="btn btn-lg btn-primary btn-block">
	<input type="hidden" name="_csrf" value="<%= _csrf %>">
</form>